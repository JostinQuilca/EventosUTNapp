@model IEnumerable<EventosUTNapp.Models.Evento>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Lista de Eventos";
    ViewData["ActivePage"] = "Eventos"; // Opcional para menú activo
}

<h1>Eventos</h1>

<p>
    <a class="btn btn-primary" asp-controller="Eventos" asp-action="Create">Crear Nuevo Evento</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Fecha</th>
            <th>Lugar</th>
            <th>Tipo de Evento</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.Lugar</td>
                <td>@item.TipoEvento?.Nombre</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-controller="Eventos" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                    <a class="btn btn-warning btn-sm" asp-controller="Eventos" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-danger btn-sm" asp-controller="Eventos" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
