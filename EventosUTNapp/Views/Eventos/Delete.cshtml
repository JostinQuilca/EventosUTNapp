@model EventosUTNapp.Models.Evento

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Nombre de la página aquí";  // Ejemplo: "Lista de Eventos"
    ViewData["ActivePage"] = "Eventos";  // Pon la sección activa para marcar en el menú (opcional)
}


<h1>Eliminar Evento</h1>

<h3>¿Está seguro que desea eliminar este evento?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.Fecha.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-2">Lugar</dt>
        <dd class="col-sm-10">@Model.Lugar</dd>

        <dt class="col-sm-2">Tipo de Evento</dt>
        <dd class="col-sm-10">@Model.TipoEvento?.Nombre</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
