@model EventosUTNapp.Models.Evento

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Nombre de la página aquí";  // Ejemplo: "Lista de Eventos"
    ViewData["ActivePage"] = "Eventos";  // Pon la sección activa para marcar en el menú (opcional)
}


<h1>Crear Nuevo Evento</h1>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Fecha"></label>
        <input asp-for="Fecha" type="datetime-local" class="form-control" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Lugar"></label>
        <input asp-for="Lugar" class="form-control" />
        <span asp-validation-for="Lugar" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="TipoEventoId">Tipo de Evento</label>
        <select asp-for="TipoEventoId" class="form-select" asp-items="ViewBag.TipoEventoId"></select>
        <span asp-validation-for="TipoEventoId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Crear</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
