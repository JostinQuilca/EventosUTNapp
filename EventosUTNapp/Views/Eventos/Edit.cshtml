@model EventosUTNapp.Models.Evento

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Editar Evento";
}

<h2>Editar Evento</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Fecha" class="form-label"></label>
        <input asp-for="Fecha" class="form-control" type="datetime-local" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Lugar" class="form-label"></label>
        <input asp-for="Lugar" class="form-control" />
        <span asp-validation-for="Lugar" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TipoEventoId" class="form-label"></label>
        <select asp-for="TipoEventoId" class="form-select" asp-items="ViewBag.TipoEventoId"></select>
        <span asp-validation-for="TipoEventoId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
