<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - EventosUTNapp</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            overflow-x: hidden;
        }

        #sidebar {
            width: 200px;
            height: 100vh;
            background-color: #0d6efd; /* azul bootstrap */
            color: white;
            position: fixed;
            top: 56px; /* altura navbar */
            left: 0;
            padding-top: 1rem;
        }

            #sidebar .nav-link {
                color: white;
            }

                #sidebar .nav-link:hover,
                #sidebar .nav-link.active {
                    background-color: #0b5ed7;
                    color: white;
                }

        #content {
            margin-left: 200px;
            padding: 20px;
            padding-top: 56px; /* para compensar navbar fijo */
            min-height: calc(100vh - 56px);
        }

        .navbar-brand {
            color: white !important;
        }
    </style>
</head>
<body>
    <!-- Navbar superior -->
    <nav class="navbar navbar-expand navbar-dark bg-primary fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">EventosUTNapp</a>
        </div>
    </nav>

    <!-- Sidebar -->
    <div id="sidebar" class="d-flex flex-column">
        <nav class="nav flex-column">
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")" href="/">Inicio</a>
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Eventos" ? "active" : "")" href="/Eventos">Eventos</a>
        </nav>
    </div>

    <!-- Contenido principal -->
    <div id="content">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
